lidators : {                        notEmpty : {                            message : 'The amount is required'                        },                        numeric : {                            message : 'The amount must be a number'                        }                    }                },                max_load : {                    validators : {                        notEmpty : {                            message : 'The amount is required'                        },                        numeric : {                            message : 'The amount must be a number'                        }                    }                },                session_fee : {                    validators : {                        notEmpty : {                            message : 'The amount is required'                        },                        numeric : {                            message : 'The amount must be a number'                        }                    }                }            }        })        .on('success.form.bv', function(e)         {            var data = JSON.stringify($('#programme').serializeObjectNumber());            e.preventDefault();            $.SmartMessageBox({                title: "<i class='fa fa fa-spinner fa-spin txt-color-green'></i> Confirmation!",                content: "Do you want to save this form?",                buttons: '[No][Yes]'            },            function (ButtonPressed)             {                if (ButtonPressed === "Yes")                 {                    $.ajax({                        type: 'POST',                        url: '<?php echo URL::route('save_programme_management'); ?>',                        data:                         {                            lc_id: <?php echo $lc_id ?>,                            data: data                        },                        success: function (msg) {                            $.smallBox({                                title: "Success",                                content: "<i class='fa fa-clock-o'></i> <i>Form saved successfully.</i>",                                color: "#659265",                                iconSmall: "fa fa-check fa-2x bounce animated",                                timeout: 4000                            });                        }                    });                    $('#submit').prop("disabled", false);                }                if (ButtonPressed === "No")                 {                    $.smallBox({                        title: "Cancelled",                        content: "<i class='fa fa-clock-o'></i> <i>Submmison cancelled.</i>",                        color: "#C46A69",                        iconSmall: "fa fa-times fa-2x bounce animated",                        timeout: 4000                    });                    $('#submit_button').prop("disabled", false);                }            });        });    });</script><?php $__env->stopSection(); ?>
